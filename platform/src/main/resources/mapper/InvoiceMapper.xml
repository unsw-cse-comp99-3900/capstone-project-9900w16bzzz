<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zzz.platform.api.invoice.dao.InvoiceDao">

    <select id="getFileById" resultType="com.zzz.platform.api.invoice.entity.InvoiceEntity">
        SELECT *
        FROM t_file
        <where>
            user_id = #{userId}
        </where>
    </select>

    <select id="getFileByName" resultType="com.zzz.platform.api.invoice.entity.InvoiceEntity">
        SELECT *
        FROM t_file
        WHERE t_file.file_name =#{fileName}
        /* 模糊查询
           filename ———— 模糊查询内容
         */
    </select>

    <insert id="addFile">
        INSERT INTO t_file (file_name, user_id, file_content, file_validation)
        VALUES (#{fileName},#{userId},#{fileContent},0)
    </insert>

</mapper>